<div id="cookie-banner" class="hidden fixed bottom-0 left-0 w-full bg-slate-800 text-white p-5 shadow-lg z-50">
    <div class="container mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-slate-200 text-center md:text-left">
            Weboldalunk sütiket használ a legjobb felhasználói élmény biztosítása érdekében.
            <a href="/adatvedelem" class="font-bold underline hover:text-teal-400">Részletek itt.</a>
        </p>
        <button id="accept-cookies" class="bg-teal-600 hover:bg-teal-700 text-white font-bold py-2 px-6 rounded-full transition duration-300 flex-shrink-0">
            Elfogadom
        </button>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const banner = document.getElementById('cookie-banner');
        const acceptBtn = document.getElementById('accept-cookies');

        // Ellenőrizzük, hogy a felhasználó korábban elfogadta-e
        if (!localStorage.getItem('cookie_consent')) {
            banner.classList.remove('hidden');
        }

        // A gombra kattintva elmentjük a hozzájárulást és elrejtjük a bannert
        acceptBtn.addEventListener('click', () => {
            localStorage.setItem('cookie_consent', 'true');
            banner.style.display = 'none';
        });
    });
</script>