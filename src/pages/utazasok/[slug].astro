---
import Layout from '../../layouts/Layout.astro';
import Fejlec from '../../components/Fejlec.astro';
import Lablec from '../../components/Lablec.astro';
import AjanlatkeresSzekcio from '../../components/AjanlatkeresSzekcio.astro';
import { utazasok } from '../../data/utazasok.js';

export async function getStaticPaths() {
  return utazasok.map(ut => ({
    params: { slug: ut.slug },
    props: { utazas: ut },
  }));
}

const { utazas } = Astro.props;
---
<Layout title={`${utazas.celpont} | DOL Bt.`} description={utazas.leiras}>
    <Fejlec />
    <main>
        <section class="relative h-[50vh] min-h-[400px] bg-cover bg-center flex items-center justify-center text-white" style=`background-image: url('${utazas.kepUrl}')`>
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/30"></div>
            <div class="relative z-10 text-center px-6">
                <h1 class="font-display text-4xl md:text-6xl font-extrabold drop-shadow-lg">
                    {utazas.celpont}
                </h1>
                <p class="text-xl md:text-2xl mt-4 max-w-2xl mx-auto drop-shadow-md">
                    {utazas.leiras}
                </p>
            </div>
        </section>

        <section class="py-20 bg-white">
            <div class="container mx-auto px-6 max-w-6xl">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                    
                    <div class="lg:col-span-2 prose prose-lg max-w-none text-slate-700">
                        <div set:html={utazas.reszletesLeiras} />
                    </div>

<aside class="lg:col-span-1">
    <div class="bg-slate-50 p-6 rounded-lg shadow-md border-l-4 border-teal-500">
        <h2 class="text-2xl font-bold font-display text-slate-800 mb-6">Utazás részletei</h2>
        <ul class="space-y-4 text-slate-600">
            <li class="flex items-start">
                <svg class="w-5 h-5 mr-3 text-teal-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                <div>
                    <strong class="block">Időtartam:</strong>
                    <span>{utazas.idotartam || '3-5 nap'}</span>
                </div>
            </li>
            <li class="flex items-start">
                <svg class="w-5 h-5 mr-3 text-teal-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.653-.08-1.283-.23-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.653.08-1.283.23-1.857m10.083-6.505A3.5 3.5 0 0015.5 9a3.5 3.5 0 00-3.417 3.145m-6.333 0A3.5 3.5 0 018.5 9a3.5 3.5 0 013.417 3.145m0 0H12.5m-3.583 0h3.583"></path></svg>
                <div>
                    <strong class="block">Kinek ajánlott:</strong>
                    <span>{utazas.kinek_ajanlott || '7-8. osztály'}</span>
                </div>
            </li>
            <li class="flex items-start">
                <svg class="w-5 h-5 mr-3 text-teal-600 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                <div>
                    <strong class="block">Fő helyszínek:</strong>
                    <span>{utazas.fo_helyszinek || 'Nincs megadva'}</span>
                </div>
            </li>
        </ul>
    </div>
</aside>
                </div>
            </div>
        </section>

        <AjanlatkeresSzekcio />
    </main>
    <Lablec />
</Layout>