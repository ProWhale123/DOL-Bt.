---
import Layout from '../layouts/Layout.astro';
import Fejlec from '../components/Fejlec.astro';
import HosSzekcio from '../components/HosSzekcio.astro';
import AprogramrolSzekcio from '../components/AProgramrolSzekcio.astro';
import MiertMinketSzekcio from '../components/MiertMinketSzekcio.astro';
import UtazasKartya from '../components/UtazasKartya.astro';
import AjanlatkeresSzekcio from '../components/AjanlatkeresSzekcio.astro';
import Lablec from '../components/Lablec.astro';
import { utazasok } from '../data/utazasok.js'; // Adatok behívása
import PalyazatiInfoSzekcio from '../components/PalyazatiInfoSzekcio.astro';
---
<Layout title="DOL Bt. | Határtalanul Utazások">
    <Fejlec />
    <main>
        <HosSzekcio />
        <AprogramrolSzekcio />
        <MiertMinketSzekcio />

        <section id="palyazatok" class="py-16 bg-gray-100">
            <div class="container mx-auto px-6">
                <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
                    Kiemelt Pályázati Célpontjaink
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
                    {utazasok.map(ut => (
                        <UtazasKartya 
                            celpont={ut.celpont}
                            leiras={ut.leiras}
                            kepUrl={ut.kepUrl}
                            slug={ut.slug} 
                        />
                    ))}
                </div>
                 <div class="text-center mt-12">
                    <a href="/palyazatok" class="bg-teal-600 hover:bg-teal-700 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                        Összes pályázat
                    </a>
                </div>
            </div>
        </section>
                <PalyazatiInfoSzekcio/>
        <AjanlatkeresSzekcio />
    </main>
    <Lablec />
</Layout>